<UserControl x:Class="Barcode.UCS.Controls.PaperPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Barcode.UCS.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Add Paper" FontWeight="ExtraBlack" FontSize="30"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="1" Content="ID"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="2" Content="Element Name"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="3" Content="Widht"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="4" Content="Height"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="5" Content="Current Paper"/>

        <TextBlock Text="ID" x:Name="IDtb"  FontSize="20" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Background="White"/>
        <TextBox Margin="5" x:Name="ElementNamePaper" Grid.Column="1" Grid.Row="2"/>
        <TextBox Margin="5" x:Name="WidthPaper" Grid.Column="1" Grid.Row="3"/>
        <TextBox Margin="5" x:Name="HeightPaper" Grid.Column="1" Grid.Row="4"/>
        <ComboBox Grid.Column="1" Grid.Row="5" Margin="5" x:Name="PaperCb"/>
        <Button Margin="5" Content="OK" Grid.Row="5" Click="Button_Click_1"/>
        <Button Margin="5" Content="X" Grid.Row="5" Grid.Column="1" Click="Button_Click"/>
    </Grid>
</UserControl>
