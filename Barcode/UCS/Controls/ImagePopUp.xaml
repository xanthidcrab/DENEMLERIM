<UserControl x:Class="Barcode.UCS.Controls.ImagePopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Barcode.UCS.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="3" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Add Image" FontWeight="ExtraBlack" FontSize="30"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="1" Content="ID"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="2" Content="Element Name"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="3" Content="Widht"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="4" Content="Height"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="5" Content="Image Path"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="6" Content="X Position"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Grid.Row="7" Content="Y Position"/>
        <Border BorderBrush="Black" BorderThickness="3" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" Margin="5">
            <Image x:Name="MainImage"/>
        </Border>
        <TextBlock Text="ID" x:Name="IDtb"  FontSize="20" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="5" Background="White"/>
        <TextBox Margin="5" x:Name="ElementNamePaper" Grid.Column="1" Grid.Row="2"/>
        <TextBox  Margin="5" x:Name="WidthPaper" Grid.Column="1" Grid.Row="3"/>
        <TextBox Grid.ColumnSpan="2" Margin="5" x:Name="HeightPaper" Grid.Column="1" Grid.Row="4"/>
        <TextBox Grid.ColumnSpan="2" Margin="5" x:Name="xpos" Grid.Column="1" Grid.Row="6"/>
        <TextBox Grid.ColumnSpan="2" Margin="5" x:Name="ypos" Grid.Column="1" Grid.Row="7"/>
        <Grid Grid.Row="5" Grid.Column="1" Margin="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Browse" Margin="5" Click="Button_Click_2"/>
            <TextBox Grid.Column="1" x:Name="ImagePath" Margin="5"/>

        </Grid>
        <Button Margin="6" Content="OK" Grid.Row="8" Click="OkButtonClick" />
        <Button Margin="6" Content="X" Grid.Row="8" Grid.Column="1" Click="ExitButtonClick"/>
    </Grid>
</UserControl>
