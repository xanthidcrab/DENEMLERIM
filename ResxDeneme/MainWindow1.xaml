<Window x:Class="ResxDeneme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResxDeneme"
        xmlns:vm="clr-namespace:ResxDeneme.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <ComboBox SelectedItem="{Binding SelectedLanguage}">
                <ComboBoxItem Content="English" Tag="en" />
                <ComboBoxItem Content="Türkçe" Tag="tr" />
                <ComboBoxItem Content="Italiano" Tag="it" />
            </ComboBox>

            <Label Content="{Binding Label1}" />
            <Label Content="{Binding Label2}" />
            <Label Content="{Binding Label3}" />
            <Label Content="{Binding Label4}" />
            <Label Content="{Binding Label5}" />
            <Label Content="{Binding Label6}" />
            <Label Content="{Binding Label7}" />
            <Label Content="{Binding Label8}" />
            <Label Content="{Binding Label9}" />
            <Label Content="{Binding Label10}" />
        </StackPanel>
    </Grid>
</Window>
