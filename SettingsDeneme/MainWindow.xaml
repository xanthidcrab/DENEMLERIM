<Window x:Class="SettingsDeneme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SettingsDeneme"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="ThemeComboBox" Width="100" Margin="10" VerticalAlignment="Top">
            <ComboBoxItem Content="Light" />
            <ComboBoxItem Content="Dark" />
        </ComboBox>
        <CheckBox x:Name="DarkModeCheckBox" Content="Enable Dark Mode" Margin="10" VerticalAlignment="Center" />
        <Button Content="Save Settings" Width="100" Margin="10" VerticalAlignment="Bottom" Click="SaveButton_Click"/>
    </Grid>
</Window>
